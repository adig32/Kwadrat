<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tlo_rozmazane"
    tools:context=".SendReviewActivity">

    <TextView
        android:id="@+id/send_message_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp"
        android:text="dodaj opinię"
        android:textAllCaps="true"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/review_content_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:layout_below="@+id/send_message_label"
        android:text="Treść opinii:" />

    <EditText
        android:id="@+id/review_content"
        android:layout_below="@+id/review_content_label"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/review_to_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:layout_below="@+id/review_content"
        android:text="Właściciel:" />

    <TextView
        android:id="@+id/review_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/review_to_label"
        android:text="message_to" />

    <TextView
        android:id="@+id/about_flat_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:layout_below="@+id/review_to"
        android:text="Mieszkanie nr:" />

    <TextView
        android:id="@+id/about_flat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/about_flat_label"
        android:text="about_flat" />

    <TextView
        android:id="@+id/note_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:layout_below="@+id/about_flat"
        android:text="Ocena (1-5):" />

    <EditText
        android:id="@+id/note"
        android:layout_below="@+id/note_label"
        android:layout_margin="10dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/btn_send"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dodaj opinię"
        android:layout_alignParentBottom="true"
        android:textSize="15sp"
        android:alpha="0.8"
        android:background="#4A73B0"
        android:textColor="@color/colorAccent" />

</RelativeLayout>