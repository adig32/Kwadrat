<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp" >


            <TextView
                android:id="@+id/message_from_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="Od: " />

            <TextView
                android:id="@+id/message_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/message_from_label"
                android:textSize="18sp"
                android:text="message_from" />

            <TextView
                android:id="@+id/about_flat_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_below="@+id/message_from_label"
                android:text="Mieszkanie nr: " />

            <TextView
                android:id="@+id/about_flat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/about_flat_label"
                android:textSize="18sp"
                android:layout_below="@+id/message_from_label"
                android:text="about_flat" />

            <TextView
                android:id="@+id/message_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_below="@+id/about_flat_label"
                android:text="Treść: " />

            <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_below="@+id/message_label"
                android:text="message" />

            <TextView
                android:id="@+id/tap_to_reply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:textStyle="italic"
                android:textAlignment="center"
                android:layout_below="@+id/message"
                android:text="Dotknij, aby odpowiedzieć" />

            <TextView
                android:id="@+id/logged_user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:visibility="invisible"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>