<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp" >

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:layout_marginRight="2dp"
                app:srcCompat="@drawable/ic_menu_gallery" />

            <TextView
                android:id="@+id/offer_street"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ulica"
                android:textColor="#000"
                android:layout_toRightOf="@+id/thumbnail"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/offer_city_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Miasto"
                android:textSize="14sp"
                android:layout_toRightOf="@+id/thumbnail"
                android:layout_below="@id/offer_street"/>

            <TextView
                android:id="@+id/offer_district_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dzielnica"
                android:textSize="14sp"
                android:layout_toRightOf="@+id/thumbnail"
                android:layout_below="@id/offer_city_name"/>

            <TextView
                android:id="@+id/offer_flat_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Powierzchnia"
                android:textSize="14sp"
                android:layout_toRightOf="@+id/thumbnail"
                android:layout_below="@+id/offer_district_name"/>

            <TextView
                android:id="@+id/offer_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textSize="14sp"
                android:layout_toRightOf="@+id/thumbnail"
                android:layout_below="@+id/offer_flat_area"/>

            <TextView
                android:id="@+id/offer_rent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Cena"
                android:paddingLeft="10dp"
                android:textAlignment="center"
                android:background="#7F88A8"
                android:textColor="#FFF"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_below="@+id/offer_login"/>

            <TextView
                android:id="@+id/offer_id_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID: "
                android:layout_toLeftOf="@+id/offer_id"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/offer_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Id"
                android:textSize="14sp"
                android:layout_alignParentRight="true"/>

            <TextView
                android:id="@+id/logged_user_id"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>