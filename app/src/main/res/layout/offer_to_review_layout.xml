<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp" >

            <TextView
                android:id="@+id/offer_street_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ulica: "
                android:textColor="#000"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/offer_street"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ulica: "
                android:layout_below="@id/offer_street_label"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/offer_city_name_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Miasto: "
                android:textColor="#000"
                android:textSize="14sp"
                android:layout_below="@id/offer_street"/>

            <TextView
                android:id="@+id/offer_city_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Miasto: "
                android:textSize="14sp"
                android:layout_below="@id/offer_city_name_label"/>

            <TextView
                android:id="@+id/offer_district_name_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dzielnica:"
                android:textColor="#000"
                android:textSize="14sp"
                android:layout_below="@id/offer_city_name"/>

            <TextView
                android:id="@+id/offer_district_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dzielnica"
                android:textSize="14sp"
                android:layout_below="@id/offer_district_name_label"/>

            <TextView
                android:id="@+id/offer_user_id_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ID użytkownika wynajmującego:"
                android:textColor="#000"
                android:textSize="14sp"
                android:layout_below="@id/offer_district_name"/>

            <TextView
                android:id="@+id/offer_user_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ID użytkownika wynajmującego"
                android:textSize="14sp"
                android:layout_below="@id/offer_user_id_label"/>

            <TextView
                android:id="@+id/offer_owner_id_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ID właściciela:"
                android:textColor="#000"
                android:textSize="14sp"
                android:layout_below="@id/offer_user_id"/>

            <TextView
                android:id="@+id/offer_owner_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ID właściciela"
                android:textSize="14sp"
                android:layout_below="@id/offer_owner_id_label"/>

            <TextView
                android:id="@+id/offer_id_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID: "
                android:textColor="#000"
                android:layout_toLeftOf="@+id/offer_id"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/offer_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Id"
                android:textSize="14sp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>